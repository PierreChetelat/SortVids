<Window x:Class="SortMyVids.WindowsParameter.ParameterName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ParameterName" Height="350" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="uiListViewName" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5,5,5,35"/>
        <Label Content="Nom :" VerticalAlignment="Center"/>
        <TextBox x:Name="uiTextBox" VerticalAlignment="Center" Height="25" Margin="50,0,5,0" />
        <Button Content="Ajouter" Click="ButtonAdd_Click" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5" />
        <Button Content="Supprimer sélection" Click="ButtonDelete_Click" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        
        <Button Content="Valider" Click="ButtonClose_Click" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
    </Grid>
</Window>
